@model IEnumerable<DestinyCommunityCenter.EF.DATA.ToDo>

@{
    ViewBag.Title = "To Do Items";
}

<h2>@ViewBag.Title</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create", null, null, htmlAttributes: new { @class = "btn btn-success" })
    </p>
}


<table class="table data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDoList.ListName)
            </th>
            <th>
                Admin
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsComplete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToDoList.ListName)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.ToDoID }, htmlAttributes: new { @class = "btn btn-success admin-btn" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ToDoID }, htmlAttributes: new { @class = "btn btn-success admin-btn" })
                        @Html.ActionLink("Details", "Details", new { id = item.ToDoID }, htmlAttributes: new { @class = "btn btn-primary" })
                    }
                    @if (User.IsInRole("Volunteer"))
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.ToDoID }, htmlAttributes: new { @class = "btn btn-primary" })
                    }

                </td>
            </tr>
        }
    </tbody>

</table>
