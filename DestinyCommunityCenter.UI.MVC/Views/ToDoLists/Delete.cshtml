@model DestinyCommunityCenter.EF.DATA.ToDoList

@{
    ViewBag.Title = "Delete";
}

<h2>@ViewBag.Title @Html.DisplayFor(model => model.ListName)</h2>

<h3>Are you sure you want to delete @Html.DisplayFor(model => model.ListName)?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ListName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ListName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> &emsp;
            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
        </div>
    }
</div>
